{
	"name": "Bounty Thing Dev Container",
	"image": "ghcr.io/jazz23/bounty-thing:latest",
	// "build":{
	// 	"dockerfile": "Dockerfile"
	// },
	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"github.vscode-github-actions"
